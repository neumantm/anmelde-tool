option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: backend.wsgi:application

packages:
  yum:
    python3-devel: []
    postgresql-devel: []

container_commands:
  00_start:
    command: "echo starting initialization"
  01_delete_db:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python manage.py reset_db --noinput"
    leader_only: true
  02_makemigrations:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python manage.py makemigrations"
    leader_only: true
  03_migrate:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python manage.py migrate"
    leader_only: true
  04_add_test_user:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python manage.py add_users"
    leader_only: true
  05_add_test_data:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python manage.py loaddata data/unchangable-main-data/*.json"
    leader_only: true
  06_add_test_data:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python manage.py loaddata data/master-data/*.json"
    leader_only: true
  07_add_test_data_2:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python manage.py loaddata data/test-data/*.json"
    leader_only: true
